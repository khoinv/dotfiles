[user]
    email = khoinvbg@gmail.com
    name = Nguyen Van Khoi
[push]
    default = current
[color]
    ui = always
[core]
    excludesfile = ~/.gitignore
    pager = nkf -w | LESSCHARSET=utf-8 less
    quotepath = false
    editor = /usr/local/bin/vim
[alias]
    tree = log --oneline --decorate --all --graph
    merge-log = "!f() { git log --stat \"$1^..$1\"; }; f"
    dt = difftool
    mt = mergetool
    d = diff
    c = commit
    ch = checkout
    s = status
    p = pull
    m = merge
    a = add
    l = log
    lp = log -p
    lt = log --stat
    r = rebase


[init]
    templatedir = ~/.git_template
[diff]
    tool = vimdiff
[difftool]
	prompt = false
[url "git@bitbucket.org:"]
    insteadOf = https://bitbucket.org/
; [url "github.com"]
;     insteadOf = https://github.com
[http]
	sslVerify = false
[merge]
	tool = vimdiff
	conflictstyle = diff3

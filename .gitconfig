[user]
    email = khoinvbg@gmail.com
    name = Nguyen Van Khoi
[push]
    default = current
[color]
    ui = always
[core]
    excludesfile = ~/.gitignore
    pager = nkf -w | LESSCHARSET=utf-8 less
    quotepath = false
    editor = vim
[alias]
    tree = log --oneline --decorate --all --graph
    merge-log = "!f() { git log --stat \"$1^..$1\"; }; f"
    dt = difftool
    d = diff
    c = commit
    ch = checkout
    s = status
    p = pull
    m = merge
    a = add
    l = log
    lp = log -p
    lt = log --stat
    r = rebase


[init]
    templatedir = ~/.git_template
[diff]
    tool = vimdiff
[difftool]
    prompt = false
